@{
    ViewBag.Title = "Answer a Question";
}

@section head {
    <script>tinymce.init({ selector: 'textarea' });</script>
}

<div class="row">
    <div class="col-md-12">
        <h2>Write an Answer</h2>

        <div id="divQJumbo" class="jumbotron row">
            <div id="divVotes" class="col-md-1">
                <div id="divVoteCount">
                    @* Voting Data Goes Here *@
                    @Model.Question[2]
                </div>
            </div>
            <div id="divQuestion" class="col-md-9">
                <div class="divCategory">
                    @Model.Question[3]
                </div>
                @Model.Question[1]
            </div>
            <div id="divAuthorDetails" class="col-md-2">
                <div id="divGenericPerson">
                    <img src="~/Images/GenericPerson.png" height="70" width="50" alt="Generic Person Photo" />
                </div>
                <div id="divAuthor">@Model.Question[4]</div>
                <div id="divTime">@Model.Question[5]</div>
            </div>
            <div class="clearfix"></div>
            <div id="divButtonChoices">
                <div class="text-left float-left">
                    <a class="btn btn-default btn-sm" href="../Home/ViewQuestion?question_id=@Model.Question[0]">Back</a>
                </div>
                <a class="btn btn-default btn-sm" href="../Home/Answer?question_id=@Model.Question[0]">Answer</a>
                <a class="btn btn-default btn-sm" href="../Home/Comment?question_id=@Model.Question[0]">Comment</a>
            </div>
        </div>

        <p>
            <textarea id="txtAnswer"></textarea>
            <div class="text-right">
                <a href="../Home/ViewQuestion?question_id=@Model.Question[0]">
                    <button type="submit" name="btnSubmit" id="btnSubmit" value="Submit" title="Submit" class="btn btn-default" style="margin-top: 20px;">Submit</button>
                </a>
                <a href="../Home/ViewQuestion?question_id=@Model.Question[0]">
                    <button type="button" name="btnCancel" id="btnCancel" value="Cancel" title="Cancel" class="btn btn-default" style="margin-top: 20px;">Cancel</button>
                </a>
            </div>
        </p>
    </div>
</div>