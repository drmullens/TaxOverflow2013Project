@{
    ViewBag.Title = "Answer a Question";
}

@section scripts {
<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
<script>tinymce.init({
    selector: "textarea#txtAnswer",
    theme: "modern",
    plugins: [
         "advlist autolink link image lists charmap print preview hr anchor pagebreak spellchecker",
         "searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking",
         "save table contextmenu directionality emoticons template paste textcolor"
    ],
    style_formats: [
         {title: 'Bold text', inline: 'b'},
         {title: 'Red text', inline: 'span', styles: {color: '#ff0000'}},
         {title: 'Red header', block: 'h1', styles: {color: '#ff0000'}},
         {title: 'Example 1', inline: 'span', classes: 'example1'},
         {title: 'Example 2', inline: 'span', classes: 'example2'},
         {title: 'Table styles'},
         { title: 'Table row 1', selector: 'tr', classes: 'tablerow1' }
    ],
    schema: "html5"
}); </script>}

<div class="row">
    <div class="col-md-12">
        <h2>Write an Answer</h2>

        <div id="divQJumbo" class="jumbotron row">
            <div id="divVotes" class="col-md-1">
                <div id="divVoteCount">
                    @* Voting Data Goes Here *@
                    @Model.aQuestion.Score
                </div>
            </div>
            <div id="divQuestion" class="col-md-9">
                <div class="divCategory">
                    @Model.CategoryString
                </div>
                @Model.aQuestion.Question
            </div>
            <div id="divAuthorDetails" class="col-md-2">
                <div id="divGenericPerson">
                    <img src="~/Images/GenericPerson.png" height="70" width="50" alt="Generic Person Photo" />
                </div>
                <div id="divAuthor">@Model.UserName</div>
                <div id="divTime">@Model.aQuestion.QuestionDTS</div>
            </div>
            <div class="clearfix"></div>
            <div id="divButtonChoices">
                <div class="text-left float-left">
                    <a class="btn btn-default btn-sm" href="../Home/ViewQuestion?question_id=@Model.aQuestion.QuestionID">Back</a>
                </div>
                <a class="btn btn-default btn-sm" href="../Home/Answer?question_id=@Model.aQuestion.QuestionID">Answer</a>
                <a class="btn btn-default btn-sm" href="../Home/Comment?question_id=@Model.aQuestion.QuestionID">Comment</a>
            </div>
        </div>

        <form method="post" action="/Home/ViewQuestion">
            <p>
                <textarea id="txtAnswer" name="txtAnswer"></textarea>

                <div class="text-right">
                    <button type="submit" name="btnSubmit" id="btnSubmit" value="Submit"
                            title="Submit" class="btn btn-default" style="margin-top: 20px;">
                        Submit
                    </button>

                    <button type="button" name="btnCancel" id="btnCancel" value="Cancel"
                            title="Cancel" class="btn btn-default" style="margin-top: 20px;">
                        Cancel
                    </button>
                </div>
                <input type="text" class="hidden" value="@Model.aQuestion.QuestionID" id="QuestionID" name="QuestionID" />
            </p>
        </form>
</div>
</div>