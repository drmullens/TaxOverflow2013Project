@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-lg-6">
        <div id="divRecent" class="jumbotron">
            <h2>Top 5 Most Recent</h2>
            @*
                Pull top 5 most Recent:
                0 - id, 1 - Question, 2 - Number of Votes, 3 - Category, 4 - Author, 5 - TimeStamp
            *@

            @for (int i = Model.Question.Length - 1; i >= 0; i--)
            {
                <div class="Start">
                    <div class="row">
                        <div class="Question col-sm-12">
                            <a href="~/Home/ViewQuestion?question_id=@Model.Question[i][0]">@Model.Question[i][1]</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="Votes col-sm-3">
                            @Model.Question[i][2] Votes
                        </div>
                        <div class="Category col-sm-4">
                            @Model.Question[i][3]
                        </div>
                        <div class="Author col-sm-5">
                            <span class="display-inline-block">
                                <img src="~/Images/GenericPerson.png" width="25" />
                            </span>
                            <span class="display-inline-block">
                                @Model.Question[i][4] <br />
                                @Model.Question[i][5]
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-lg-6">
        <div id="divUnanswered" class="jumbotron">
            <h2>Top 5 Unanswered Questions</h2>
            @*
                Pull top 5 most Votes:
                0 - id, 1 - Question, 2 - Number of Votes, 3 - Category, 4 - Author, 5 - TimeStamp
            *@

            @for (int i = 0; i < Model.Question.Length; i++)
            {
                <div class="Start">
                    <div class="row">
                        <div class="Question col-sm-12">
                            <a href="~/Home/ViewQuestion?question_id=@Model.Question[i][0]">@Model.Question[i][1]</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="Votes col-sm-3">
                            @Model.Question[i][2] Votes
                        </div>
                        <div class="Category col-sm-4">
                            @Model.Question[i][3]
                        </div>
                        <div class="Author col-sm-5">
                            <span class="display-inline-block">
                                <img src="~/Images/GenericPerson.png" width="25" />
                            </span>
                            <span class="display-inline-block">
                                @Model.Question[i][4] <br />
                                @Model.Question[i][5]
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>