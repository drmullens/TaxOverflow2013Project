<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TaxOverflow</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", false)
</head>
<body>
    <div class="container navbar navbar-inverse navbar-static-top" style="max-height: 500px; min-height: 150px;">
        <div class="row" style="margin-top: 10px;">
            <div class="col-md-8 navbar-header">
                <a href="~/"><img class="img-thumbnail" width="100" src="~/Images/TaxOverflow.png" alt="TaxOverflow Logo" /></a>
                @Html.ActionLink("TaxOverflow", "Index", "Home", new { area = "" }, new { @class = "btn btn-link", @style =
               "font-size: 20pt; vertical-align: top; margin-top: 15px;" })
            </div>
            <div class="col-md-4">
                <p class="text-right">Hello, @(User.Identity.Name.Contains('\\') ? User.Identity.Name.Split('\\').Last() : User.Identity.Name)!</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-5 text-center">
                @Html.ActionLink("Home Page", "Index", "Home", new { area = "" }, new { @class = "btn btn-default" })
                @Html.ActionLink("Ask Question", "Question", new { area = "" }, new { @class = "btn btn-default" })
                @Html.ActionLink("All Questions", "QuestionList", new { area = "" }, new { @class = "btn btn-default" })
            </div>
            <div class="col-md-4 text-right">
                <input type="text" name="taMainSearchBox" class="input-sm" style="vertical-align: bottom" />
                <button type="submit" name="btnSubmitSearch" class="btn btn-default btn-sm" style="vertical-align: bottom">Search</button>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TaxOverflow</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery-1.11.2.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
